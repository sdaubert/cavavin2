  <% if wines.empty? and others_wines.empty? %>
  <%= t('activerecord.models.wine', count: 0) %>
  <% else %>
  <ul class="ungroup">
      <% wines.each do |millesime| %>
      <li>
          <%= link_to "#{millesime.wine.domain} #{human_millesime(millesime)}", wine_millesime_path(millesime.wine, millesime) %>,
          <%= millesime.wine.color.name %>
      </li>
      <% end %>
      <% others_wines.each do |millesime| %>
      <li>
          <%= link_to "#{millesime.wine.domain} #{human_millesime(millesime)}", wine_millesime_path(millesime.wine, millesime) %>,
          <%= millesime.wine.color.name %> (<%= millesime.wine.region.name %>)
      </li>
      <% end %>
  </ul>
  <% end %>