<div class="group">
    <h2><%= t('view.dish.select_regions_and_color') %></h2>

    <%= form_tag({action: :save_regions, id: @dish}) do %>
    <table class="select">
        <thead>
            <tr>
                <th><%= t('activerecord.models.region', count: 2) %></th>
                <th colspan="<%= @colors_count %>"><%= t('activerecord.models.color', count: 2) %></th>
            </tr>
            <tr>
                <th></th>
                <% @colors.each do |color| %>
                <th><%= color.name %></th>
                <% end %>
            </tr>
        </thead>
        <tbody>
            <%= generate_regions_table_lines(@dish) %>
        </tbody>
    </table>

    <div class="actions">
      <%= submit_tag t('form.save') %>
    </div>

    <% end %>
</div>