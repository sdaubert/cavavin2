<% if !subform && @wlog.errors.any? %>
  <div id="error_explanation">
    <% count = @wlog.errors.count %>
    <h2><%= t('form.cannot_save', model: t('activerecord.models.wlog', count: count), count: count) %></h2>
    <ul>
    <% @wlog.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= form.label :date %>
  <%= form.date_select :date %>
</div>

<div class="field">
  <%= form.label :mvt_type %>
  <%= form.select(:mvt_type, Wlog::MVT_TYPES.map { |m| [t("wlog.mvt.#{m}"), m] }) %>
</div>

<div class="field">
  <%= form.label :quantity %>
  <%= form.text_field :quantity %>
</div>

<div class="field">
  <%= form.label :price %>
  <%= form.text_field :price %>
</div>

<div class="field">
  <%= form.label :notes %>
  <%= form.text_area :notes %>
</div>

<% unless subform %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
