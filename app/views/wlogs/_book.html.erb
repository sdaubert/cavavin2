<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Wine</th>
            <th>Millesime</th>
            <th>Region</th>
            <th>Quantity</th>
            <% if show_comments %>
            <th>Comments</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% @book.each do |wlog| %>
        <tr>
            <td><%= wlog.date %></td>
            <td><%= wlog.mvt_type.upcase %></td>
            <td><%= link_to wlog.millesime.wine.domain, wine_millesime_path(wlog.millesime.wine, wlog.millesime) %></td>
            <td><%= wlog.millesime.year %></td>
            <td><%= wlog.millesime.wine.region.name %></td>
            <td><%= '-' if wlog.mvt_type == 'out' %><%= wlog.quantity %></td>
            <% if show_comments %>
            <td><%= wlog.comments %></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>