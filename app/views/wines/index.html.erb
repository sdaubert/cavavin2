<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Domain', wines_path %></th>
      <th><%= link_to 'Color', wines_path(sort_by: 'color') %></th>
      <th><%= link_to 'Millesime', wines_path(sort_by: 'millesime') %></th>
      <th>Region</th>
      <th><%= link_to 'Zone', wines_path(sort_by: 'zone') %></th>
      <th><%= link_to 'Country', wines_path(sort_by: 'country') %></th>
      <th>Organic</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |millesime| -%>
      <% wine = millesime.wine %>
      <% country_id = wine.region.country.id %>
        <tr>
          <td><%= link_to wine.domain, wine_millesime_path(wine, millesime) %></td>
          <td><%= wine.color.name %></td>
          <td><%= millesime.year %></td>
          <td><%= link_to wine.region.name, country_region_path(country_id, wine.region) %></td>
          <td><%= link_to wine.region.root.name, country_region_path(country_id, wine.region.root) %></td>
          <td><%= wine.region.country.name %></td>
          <td><%= wine.organic %></td>
          <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
          <td><%= link_to_destroy wine %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

