<% if !subform && @millesime.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@millesime.errors.count, "error") %> prohibited this millesime from being saved:</h2>
    <ul>
    <% @millesime.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= form.label :year %>
  <%= form.number_field :year %>
</div>

<div class="field">
  <%= form.label :garde %>
  <%= form.text_field :garde %>
</div>

<div class="field">
  <%= form.label :notes %>
  <%= form.text_area :notes %>
</div>

<% if @millesime.new_record? %>
  <h2>Wine log</h2>
  <%= form.fields_for(:wlogs) do |fw| %>
    <%= render partial: 'wlogs/form', locals: { subform: true, form: fw } %>
  <% end %>
<% end %>

<% unless subform %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
