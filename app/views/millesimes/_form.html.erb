<% if !subform && @millesime.errors.any? %>
  <div id="error_explanation">
    <% count = @millesime.errors.count %>
    <h2><%= t('form.cannot_save', model: t('activerecord.models.millesime', count: count), count: count) %></h2>
    <ul>
    <% @millesime.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= form.label :void_millesime, t('view.millesime.void') %>
  <%= form.check_box :void_millesime %>
</div>

<div class="field">
  <%= form.label :year %>
  <%= form.number_field :year %>
</div>

<div class="field">
  <%= form.label :garde %>
  <%= form.text_field :garde %>
</div>

<div class="field">
  <%= form.label :notes %>
  <%= form.text_area :notes %>
</div>

<% if @millesime.new_record? %>
  <h2><%= t('activerecord.models.wlog', count: 1) %></h2>
  <%= form.fields_for(:wlogs) do |fw| %>
    <%= render partial: 'wlogs/form', locals: { subform: true, form: fw } %>
  <% end %>
<% end %>

<% unless subform %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
