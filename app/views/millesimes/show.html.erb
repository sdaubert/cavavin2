<p id="notice"><%= notice %></p>

<div class="group">
  <h2><%= @millesime.wine.domain %> <%= @millesime.year %></h2>

  <%= render partial: 'wines/wine', locals: { wine: @wine, min: true } %>

  <ul>
    <li>Garde: <%= @millesime.garde %></li>
    <li>Quantity: <%= @millesime.quantity %></li>
    <li>
      Racks:
      <% if @racks.empty? %>
      none
      <% else %>
      <ul>
        <% @racks.each do |rack| %>
        <li>
          <%= link_to rack.name, bottle_rack_path(rack)%>:
          <%= BottleRack.ary_to_pos(rack.bottles.map(&:pos).sort) %>
        </li>
        <% end %>
      </ul>
      <% end %>
    </li>
  </ul>

  <% if @wine.attribute_present? :notes %>
  <dl>
    <dt>Notes about wine:</dt>
    <dd><%= @wine.notes %></dd>
  </dl>
  <% end %>
  <% if @millesime.attribute_present? :notes %>
  <dl>
    <dt>Notes about millesime:</dt>
    <dd><%= @millesime.notes %></dd>
  </dl>
  <% end %>
</div>

<div class="group">
    <h2>Log entries</h2>
    <%= render 'wlogs/wlogs' %>
    <%= link_to t_action(:new, Wlog), new_wine_millesime_wlog_path(@wine, @millesime) %>
</div>

<%= link_to t_action(:edit), edit_wine_millesime_path(@wine, @millesime) %> |
<%= link_to 'Wine', wine_path(@wine) %>
